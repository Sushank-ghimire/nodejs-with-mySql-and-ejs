<%- include("./partials/header", { title: "Your Notes - Notes App" }) %>
<body class="min-h-screen bg-indigo-100">
  <%- include("./partials/navbar") %>

  <main class="max-w-6xl mx-auto py-10 px-6">
    <h1 class="text-3xl font-bold text-indigo-600 mb-8 text-center">
      Your Notes
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% notes.forEach((note) => { %>
      <div
        class="bg-white shadow-lg rounded-lg p-6 flex flex-col justify-between"
      >
        <!-- Note Title -->
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          <%= note.title %>
        </h2>

        <!-- Note Content -->
        <p class="text-gray-600 mb-6 overflow-hidden max-h-20">
          <%= note.content.length > 100 ? note.content.substring(0, 100) + "..."
          : note.content %>
        </p>

        <!-- Action Buttons -->
        <div class="flex justify-between items-center">
          <a
            href="/edit/<%= note.id %>"
            class="bg-blue-500 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-600 transition"
          >
            Edit
          </a>
          <form action="/delete/<%= note.id %>" method="POST">
            <button
              type="submit"
              class="bg-red-500 text-white px-4 py-2 rounded-md text-sm hover:bg-red-600 transition"
              onclick="return confirm('Are you sure you want to delete this note?')"
            >
              Delete
            </button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </main>
</body>
